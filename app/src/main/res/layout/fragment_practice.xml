<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.practice.PracticeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#F7FCFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="#3A94E7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <View
            android:id="@+id/arc"
            android:layout_marginTop="120dp"
            android:background="@drawable/fragment_practice_arc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/arc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_writing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp"
                android:layout_margin="15dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/writing_icon_home"
                        android:background="@drawable/writing_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="start"
                        android:textAlignment="textStart"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/writing_text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writing Practice"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/writing_icon_home"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/writing_lessons_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="5 lessons"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@id/writing_icon_home"
                        app:layout_constraintTop_toBottomOf="@id/writing_text_home"/>

                    <ProgressBar
                        android:progressDrawable="@drawable/fragment_home_progress_bar_show_test_div"
                        android:background="@drawable/fragment_home_progress_bar_test_div"
                        android:progress="50"
                        android:max="100"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/writing_icon_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/writing_progress_bar_home"
                        android:layout_width="fill_parent"
                        android:layout_height="8dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp"
                android:layout_margin="15dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/reading_icon_home"
                        android:background="@drawable/reading_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="start"
                        android:textAlignment="textStart"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/reading_text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reading Practice"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/reading_icon_home"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/reading_lessons_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="5 lessons"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@id/reading_icon_home"
                        app:layout_constraintTop_toBottomOf="@id/reading_text_home"/>

                    <ProgressBar
                        android:progressDrawable="@drawable/fragment_home_progress_bar_show_test_div"
                        android:background="@drawable/fragment_home_progress_bar_test_div"
                        android:progress="50"
                        android:max="100"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reading_icon_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/reading_progress_bar_home"
                        android:layout_width="fill_parent"
                        android:layout_height="8dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_listening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp"
                android:layout_margin="15dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/listening_icon_home"
                        android:background="@drawable/listening_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="start"
                        android:textAlignment="textStart"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/listening_text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listening Practice"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/listening_icon_home"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/listening_lessons_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="5 lessons"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@id/listening_icon_home"
                        app:layout_constraintTop_toBottomOf="@id/listening_text_home"/>

                    <ProgressBar
                        android:progressDrawable="@drawable/fragment_home_progress_bar_show_test_div"
                        android:background="@drawable/fragment_home_progress_bar_test_div"
                        android:progress="50"
                        android:max="100"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/listening_icon_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/listening_progress_bar_home"
                        android:layout_width="fill_parent"
                        android:layout_height="8dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_speaking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="50dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >
                    <ImageView
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/speaking_icon_home"
                        android:background="@drawable/speaking_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="start"
                        android:textAlignment="textStart"
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/speaking_text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speaking Practice"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/speaking_icon_home"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/speaking_lessons_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="5 lessons"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@id/speaking_icon_home"
                        app:layout_constraintTop_toBottomOf="@id/speaking_text_home"/>

                    <ProgressBar
                        android:progressDrawable="@drawable/fragment_home_progress_bar_show_test_div"
                        android:background="@drawable/fragment_home_progress_bar_test_div"
                        android:progress="50"
                        android:max="100"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/speaking_icon_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/speaking_progress_bar_home"
                        android:layout_width="fill_parent"
                        android:layout_height="8dp"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>