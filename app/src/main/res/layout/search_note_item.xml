<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:padding="20dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:background="@drawable/rounded_rectangle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/note_item_cate_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enviroment aaaa heheheh ahhhh"
            android:textStyle="bold"
            android:textSize="18sp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="0.7"
            android:maxLines="1"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/note_item_author_name"
            app:layout_constraintHorizontal_bias="0"
            android:textColor="@color/semi_black"/>
        <TextView
            android:id="@+id/note_item_author_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="elliotnguyen"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/light_light_blue"/>
        <TextView
            android:id="@+id/note_item_term_count"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 terms"
            app:layout_constraintTop_toBottomOf="@+id/note_item_cate_name"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/semi_black"/>


        <Button
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/blue"

            app:layout_constraintTop_toBottomOf="@+id/note_item_cate_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:text="Continue"
            android:textSize="10sp"
            android:padding="4dp"
            android:drawableEnd="@drawable/ic_arrow_right"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>