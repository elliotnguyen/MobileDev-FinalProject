<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_background"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/speaking_practice_header"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/speaking_practice_result_cancel_button"
                android:background="@drawable/cancel_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/speaking_practice_result_retry_button"
                android:background="@drawable/practice_submit_button"
                android:layout_width="100dp"
                android:text="Retry"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_height="30dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/speaking_practice_navigation"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:paddingStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/fragment_reading_result_header_background">
        <TextView
            android:id="@+id/speaking_practice_result_text"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="start"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#FD3B03"
            android:text="Your Result: 13/13"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:background="#F7FCFF"
        android:paddingHorizontal="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/speaking_practice_result_explaination"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Part 1"
                android:textSize="16sp"
                android:textStyle="italic"/>




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>