<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/writing_list_viewholder_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/reading_list_viewholder_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <TextView
        android:id="@+id/writing_list_viewholder_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/writing_list_viewholder_icon"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="16sp"/>
    <ProgressBar
        android:progressDrawable="@drawable/fragment_home_progress_bar_show_test_div"
        android:background="@drawable/fragment_home_progress_bar_test_div"
        android:progress="50"
        android:max="100"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/writing_list_viewholder_title"
        app:layout_constraintStart_toEndOf="@id/writing_list_viewholder_icon"
        android:id="@+id/writing_list_viewholder_progressbar"
        android:layout_width="150dp"
        android:layout_height="8dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <TextView
        android:id="@+id/writing_list_viewholder_progressbar_text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/writing_list_viewholder_title"
        app:layout_constraintStart_toEndOf="@id/writing_list_viewholder_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textColor="@color/black"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/writing_list_viewholder_action_btn"
        android:padding="5dp"
        android:background="@drawable/reading_list_viewholder_continue_btn"
        android:text="Continue"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/writing_list_viewholder_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>