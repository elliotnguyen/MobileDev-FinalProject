<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/semi_rounded_rectangle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/close_red"/>

        <TextView
            android:id="@+id/note_detail_item_word_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="0.7"
            android:maxLines="2"
            android:text="Enviroment aaaa heheheh ahhhh sadasd adassa"
            android:textColor="@color/semi_black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/delete_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/note_detail_item_divider"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/note_detail_item_word_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete_btn"

            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/blur_gray_btn_bg_color"/>
        <TextView
            android:id="@+id/note_detail_item_description"
            android:layout_marginTop="5dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
   android:textSize="11sp"
            android:text="This is a test description, it very useful This is a test description, it very usefulThis is a test description, it very useful"
            app:layout_constraintTop_toBottomOf="@id/note_detail_item_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/delete_btn"
            android:textColor="@color/semi_black"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/note_detail_edit"
            android:layout_marginTop="15dp"
            android:layout_width="70dp"
            app:layout_constraintTop_toBottomOf="@+id/note_detail_item_description"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/home_button_background_v2"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:textColor="#3A94E7"
            android:textSize="10sp"
            android:text="Edit"
            android:layout_height="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>