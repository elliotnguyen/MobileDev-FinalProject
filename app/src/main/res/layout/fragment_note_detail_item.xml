<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/semi_rounded_rectangle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/note_detail_item_word_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="0.7"
            android:maxLines="2"
            android:text="Enviroment aaaa heheheh ahhhh sadasd adassa"
            android:textColor="@color/semi_black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/note_detail_item_divider"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/note_detail_item_word_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#453D3D"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/note_detail_item_description"
            android:layout_marginTop="5dp"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
   android:textSize="11sp"
            android:text="This is a test description, it very useful This is a test description, it very usefulThis is a test description, it very useful"
            app:layout_constraintTop_toBottomOf="@id/note_detail_item_divider"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/semi_black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>