<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="20dp"
    android:background="@drawable/rounded_rectangle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/note_item_cate_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enviroment aaaa heheheh ahhhh"
            android:textStyle="bold"
            android:textSize="20sp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="0.7"
            android:maxLines="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/note_item_author_name"
            android:textColor="@color/semi_black"/>
        <TextView
            android:id="@+id/note_item_author_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="elliotnguyen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/light_light_blue"/>
        <TextView
            android:id="@+id/note_item_term_count"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 terms"
            app:layout_constraintTop_toBottomOf="@+id/note_item_cate_name"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/semi_black"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/note_detail"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/note_item_term_count"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/home_button_background_v2"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:textColor="#3A94E7"
            android:textSize="15sp"
            android:text="Learn"
            android:layout_height="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>